{
  "name": "Estuary",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Adds estuary context menu items to Chromium",
  "homepage_url": "http://jollo.org/LNT/estuary",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon16.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "contextMenus", 
    "tabs" 
  ]
}